<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript">
google.load("visualization", "1", {packages:["corechart"]});
     google.setOnLoadCallback(drawChart);
     function drawChart() {
       var data = google.visualization.arrayToDataTable([
         ['School', 'Total Student hours'],
		 <%@allSchools.each do |school|%>
         	['<%=school[0]%>', <%=school[1][1]%>],
		 <%end%>
       ]);

       var options = {
         title: '<%=@range%>: Total Hours Per School'
       };

       var chart = new google.visualization.ColumnChart(document.getElementById('hours_per_school_div'));

       chart.draw(data, options);
     }
</script>
<script type="text/javascript">
google.load("visualization", "1", {packages:["corechart"]});
     google.setOnLoadCallback(drawChart);
     function drawChart() {
       var data = google.visualization.arrayToDataTable([
         ['School', 'Average Hours per Student' ],
		 <%@allSchools.each do |school|%>
